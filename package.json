{
  "name": "donategifts-frontend",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donategifts/donategifts-frontend.git"
  },
  "author": "Stacy Sealky Lee",
  "license": "NPOSL-3.0",
  "bugs": {
    "url": "https://github.com/donategifts/donategifts-frontend/issues"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --force-local",
    "build": "lerna run build --no-private",
    "clean": "gulp clean",
    "lint": "eslint --fix --ext .ts,.tsx --ignore-path .eslintignore ./apps/*",
    "postinstall": "npm run bootstrap",
    "superclean": "gulp superclean",
    "update": "lernaupdate",
    "upgradeDeps": "npx ncu -x socket.io -u && npx lerna exec --no-bail -- npx ncu -x socket.io -u"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.6.0",
    "@types/jest": "^26.0.19",
    "@types/jquery": "^3.5.5",
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "del": "^6.0.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^25.0.0",
    "gulp": "^4.0.2",
    "husky": "^4.3.6",
    "lerna": "^3.22.1",
    "npm-check-updates": "^10.2.5",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
